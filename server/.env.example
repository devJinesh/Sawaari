# Server Configuration
PORT=8000
NODE_ENV=development  # Change to 'production' when deploying

# Database
MONGO_URI=your_mongodb_connection_string_here

# JWT Secret (CHANGE THIS IN PRODUCTION - use a long random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001  # In production: Add your deployed frontend URL (e.g., https://yourapp.onrender.com)

# Client URL (for redirects)
CLIENT_URL=http://localhost:3000  # In production: Change to your deployed frontend URL

# Production flag
SERVE_REACT=false  # Set to 'true' only if serving React build from backend (not recommended for separate deployments)
